@model IEnumerable<MVCAssesment.MVC.ViewModels.EmployeeSalaryDeptIndex>

@{
    ViewBag.Title = "Employee List";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Rank)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Employee.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Employee.DOJ)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Employee.Mobile)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Employee.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Employee.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DepartmentName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SalaryAmount)
        </th>
        <th>Update</th>
        <th>Delete</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Rank)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Employee.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Employee.DOJ)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Employee.Mobile)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Employee.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Employee.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DepartmentName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SalaryAmount)
            </td>
            <td>
                @Html.ActionLink("Update", "Update", new { id = item.Employee.EmployeeId })
            </td>
            <td>
                @Html.ActionLink("Delete", "Delete", new { id = item.Employee.EmployeeId }, new { onclick = "return confirm('Are you sure to Delete this record?');" })
            </td>
        </tr>
    }
</table>