@model IEnumerable<MVCAssesment.MVC.Models.Employee>

@{
    ViewBag.Title = "Employee List";
}

<h2>Employees</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DOJ)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Mobile)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Department.DptName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Salary.SalaryAmount)
        </th>
        <th>Update Employee</th>
        <th>Delete Employee</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DOJ)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mobile)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Department.DptName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Salary.SalaryAmount)
            </td>
            <td>
                @Html.ActionLink("Update", "Update", new { id = item.EmployeeId })
            </td>
            <td>
                @Html.ActionLink("Delete", "Delete", new { id = item.EmployeeId }, new { onclick = "return confirm('Are you sure to Delete this record?');" })
            </td>
        </tr>
    }
</table>